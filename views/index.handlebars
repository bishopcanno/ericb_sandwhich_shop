{{!-- welcome sign for shop --}}
<div class="container">
  <div class="row blue lighten-1 z-depth-3 center-align">
    <div class="col s12">
      <h1>Eric B's Sandwich Shop</h1>
    </div>  
  </div>

{{!-- the menu, populated by the boolean in the mysql database  --}}
  <div class="row center-align">
    <div class="col s12">
      <div class="card blue-grey darken-1 z-depth-5">
        <div class="card-content white-text">
          <h2>Menu:</h2>
            {{!-- prints the menu for the items not "devoured" --}}
            <ul>
              {{#each sandwhiches}}
                {{#unless devoured}}
                  {{> sandwhich_partial_dir/sandwhich_block devoured=true}}
                {{/unless}}
              {{/each}}
            </ul>

            <h2>Sandwiches that you've eaten:</h2>
            {{!-- prints the menu for the items the user has eaten --}}
            <ul>
              {{#each sandwhiches}}
                {{#if devoured}}
                  {{> sandwhich_partial_dir/sandwhich_block devoured=false}}
                {{/if}}
              {{/each}}
            </ul>
        </div>
      </div>
    </div>
  </div>

