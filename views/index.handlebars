  {{!-- form for custom sandwiches --}}
  <div class="row blue-grey darken-1 z-depth-3">
    <div class="col s12 center-align">
      <h2 class="white-text">Create your own sandwich</h2>
    </div>
    <form class="col s12 custom-sandwich-form">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Custom Sandwich" id="ca" type="text" class="validate">
          <label for="ca"></label>
        </div>
      </div>
      <p>
        <label>
          <input class="with-gap" name="devour" value="1" type="radio" />
          <span>Eat it immediately?</span>
        </label>
      </p>  
      <p>
        <label>
          <input class="with-gap" name="devour" value="0" type="radio" />
          <span>Just add to menu?</span>
        </label>
      </p>  
      <button class="waves-effect waves-light btn" id="add-sandwich" type="submit">Add Sandwhich</button>
      </br>
    </form>
  </div>
</div>
